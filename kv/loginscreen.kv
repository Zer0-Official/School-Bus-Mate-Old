<LoginScreen>:

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 20
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: 'School Bus Mate'
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            #on_parent:self.focus = True
            #readonly: False
            id: user
            hint_text: 'username'
            icon_left: 'account'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5}
            #normal_color: app.theme_cls.accent_color
            #color_active: 1,1,170/255,1

        MDTextFieldRound:
            id: password
            hint_text: 'password'
            icon_left: 'eye-off'
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5}
            password: True
            normal_color: app.theme_cls.accent_color
            color_active: 1,1,170/255,1

        MDRoundFlatButton:
            text: 'LOG IN'
            font_size: 12
            pos_hint: {'center_x': 0.5}
            on_press: app.logger()
        MDRoundFlatButton:
            text: 'CLEAR'
            font_size: 12
            pos_hint: {'center_x': 0.5}
            on_press: app.clear()
